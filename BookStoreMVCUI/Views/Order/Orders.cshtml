@model IEnumerable<Order>

<div style="width:100%" class="mt-2">
    <a href="/Identity/Account/Manage" class="btn btn-primary my-2">Back</a>
    <h4>My Orders</h4>
    @if (Model != null && Model.Count() > 0)
    {

        <table class="table table-striped">
            <tr>
                <th>Order Date</th>
                <th>Order Status</th>
            </tr>
            @foreach(var order in Model)
            {
                <tr>
                    <td>@order.CreatedDate.ToString("dd-MM-yyyy")</td>
                    <td>@order.OrderStatus.StatusName</td>
                    @if(order.OrderDetails != null && order.OrderDetails.Count > 0)
                    {
                        <tr>
                            <td>
                            <table class="table table-striped">
                                <tr>
                                    <td>
                                        <h5>Total:</h5>
                                    </td>
                                    <td>
                                        <h5>@(order.OrderDetails.Select(item => item.Book.Price * item.Quantity).Sum())</h5>

                                    </td>
                                </tr>
                                <tr>
                                    <th>Book</th>
                                    <th>Genre</th>
                                    <th>Unit Price(INR)</th>
                                    <th>Total Price</th>
                                </tr>
                                    @foreach (var item in order.OrderDetails)
                                    {
                                    <tr>
                                        <td>@item.Book.BookName</td>
                                        <td>@item.Book.genre.GenreName</td>
                                        <td>@item.Book.Price X @item.Quantity</td>
                                        <td> @(item.Book.Price * item.Quantity) </td>
                                    </tr>
                                    }
                            </table>
                            </td>
                        </tr>
                    }
                </tr>
            }
        </table>


    }
    else
    {
        <h5>No Orders</h5>
    }
</div>



